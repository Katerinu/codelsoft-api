generator client {
  provider = "prisma-client-js"
  output   = "../prisma-auth-database/auth-client"
}

datasource db {
  provider = "postgresql"
  url      = env("PPG_AUTH_DATABASE_URL")
}

enum Role {
  Administrador
  Cliente
}

model User {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique
  email       String   @unique
  password    String
  name        String
  lastname    String
  created_at  String
  updated_at  String
  role        Role     @default(Cliente)
}
