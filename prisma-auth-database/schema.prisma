generator client {
  provider = "prisma-client-js"
  output   = "../prisma-auth-database/auth-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("PPG_AUTH_DATABASE_URL")
}

enum RoleType {
  Administrador
  Cliente
}

model Role {
  id    Int      @id @default(autoincrement())
  name  RoleType @unique
  users User[]
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  lastname  String
  role      Role    @relation(fields: [roleId], references: [id])
  roleId    Int
}