generator client {
  provider = "prisma-client-js"
  output   = "../prisma-auth-database/auth-database-client-types"
}

datasource db {
  provider = "postgresql"
  url      = env("PPG_AUTH_DATABASE_URL")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  name      String
  lastname  String
  roleId    Int    @relation(fields: [roleId], references: [id])
}
